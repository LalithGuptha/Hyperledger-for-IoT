{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.2.0/schema.json",
  "global": {
    "fabricVersion": "2.4.7",
    "tls": true,
    "engine": "docker",
    "peerDevMode": false,
    "tools": {
      "explorer": true
    }
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.amrita.edu"
      },
      "orderers": [
        {
          "groupName": "orderers",
          "type": "raft",
          "instances": 3
        }
      ],
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "HomeAppliance",
        "domain": "homeappliance.amrita.edu"
      },
      "peer": {
        "instances": 2,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true
      }
     
    },
    {
      "organization": {
        "name": "Surveillance",
        "domain": "surveillance.amrita.edu"
      },
      "peer": {
        "instances": 2,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true
      }
     
    },
    {
      "organization": {
        "name": "Intelli",
        "domain": "intelli.amrita.edu"
      },
      "peer": {
        "instances": 2,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true
      }
      
    }
  ],
  "channels": [
    {
      "name": "channel1",
      "orgs": [
        {
          "name":"Intelli",
          "peers": [
            "peer0",
            "peer1"
          ]
        },
        {
          "name": "HomeAppliance",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    },
    {
      "name": "channel2",
      "orgs": [
        {
          "name": "HomeAppliance",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    },
    {
      "name": "channel3",
      "orgs": [
        {
          "name": "Intelli",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    },
    {
      "name": "channel4",
      "orgs": [
        {
          "name": "Surveillance",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "chaincode1",
      "version": "0.0.1",
      "lang": "node",
      "channel": "channel1",
      "directory": "./chaincodes/chaincode-kv-node"
    }
  ]
}